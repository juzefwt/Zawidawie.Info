{% extends "::base.html.twig" %}

{% block body %}

<div id="container-full">
    <div class="content">
      <h1>Logowanie</h1>

      <table class="user">
      <tr>
          <td>
              <form action="{{ path("fos_user_security_check") }}" method="post">
                  <table class="form" style="width: 70%">
                          {% if error %}
                          <tr>
                                  <td colspan="2"><div class="alert"><center><p style="color:red">{{ error|trans }}</p></center></div></td>
                          </tr>
                          {% endif %}
                          <tr>
                                  <th style="width:40%"><label for="username">Login:</label></th>
                                  <td>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                                  </td>
                          </tr>
                          <tr>
                                  <th style="width:40%"><label for="password">Hasło:</label></th>
                                  <td>
                                    <input type="password" id="password" name="_password" />
                                  </td>
                          </tr>
                          <tr>
                                  <th></th>
                                  <td>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    <label for="remember_me">Pozostań zalogowany</label>
                                  </td>
                          </tr>
                          <tr>
                                  <th></th>
                                  <td><input type="submit" value="Zaloguj się" class="submit" /><br /><br />
                                    <a href="{{ path('fos_user_resetting_request') }}">Zapomniałem hasła</a></td>
                          </tr>
                      </table>
              </form>
          </td>
      </tr>
      </table>

      <br class="clear"/>
    </div>
</div>

{% endblock body %}
