{% extends '::base.html.twig' %}

{% block title %}Dodaj obiekt - Zawidawie.info{% endblock %}

{% block body %}

<div id="container-full">
      <div class="content">
	<h1>Dodaj obiekt</h1>

	<form action="{{ action == 'item_edit' ? path(action, {'id': item.id}) : path(action) }}" id="item_form" method="post" {{ form_enctype(form) }}>
	    <table class="form">
		<tr>
		    <th><label for="ItemType_name">Nazwa</label></th>
		    <td>{{ form_widget(form.name) }}</td>
		</tr>
		<tr><td colspan="2"> 
		    {{ form_widget(form.description, {"attr": {"class": "wysiwyg_editor"}}) }}
		</td></tr>
		{{ form_rest(form) }}
		<tr><th></th>
		<td><input type="submit" class="submit" value="Zapisz" /></td>
		</td></tr>
	    </table>
	</form>

	<br class="clear"/>
      </div>
</div>

{% render "IHQSWysiwygBundle:Script:init" %}
{% endblock %}