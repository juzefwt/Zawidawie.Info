{% extends '::base.html.twig' %}

{% block title %}Inwestycje - Zawidawie.info{% endblock %}

{% block body %}

<div id="container">
      <div class="content">
	<h1>{{ title }}</h1><br/>

	{% for it in items %}
          <img src="{{ asset('bundles/zawidawieinfocore/images/placeholder.png') }}" style="float:left;margin:5px 10px" />
          <div style="float:right;width:375px">
              <h2><a href="{{ path('item_show', {'slug': it.slug}) }}">{{ it.name }}</a></h2>
              <p>{{ it.description|html_entity_decode }}</p>
          </div>
          <br class="clear" />
	{% endfor %}

	{% include 'ZawidawieInfoCoreBundle:Default:pager.html.twig' with {'pager': items} %}

	<br class="clear"/>
      </div>
</div>

<div id="sidebar">
      <div class="content">
      </div>
</div>

{% endblock %}