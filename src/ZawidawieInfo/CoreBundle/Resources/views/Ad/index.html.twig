{% extends '::base.html.twig' %}

{% block title %}Ogłoszenia : Zawidawie.info{% endblock %}

{% block body %}

<div id="container-full">
    <div class="content">
    <h1>Ogłoszenia</h1>
    <br /><br />
    <p><a href="{{ path('ads_new') }}" class="btn">Dodaj ogłoszenie</a></p>
    <br /><br />
    <br class="clear" />

    {% for ad in ads %}
      <h2>{{ ad.title }}</h2>
      <p><small>{{ ad.createdAt|date('d.m.Y') }}, {% if ad.hasUser %}{{ ad.user.username }}{% endif %}</small></p>
      <p>{{ ad.content|striptags|nl2br }}</p><br /><br />
    {% endfor %}

    {% include 'ZawidawieInfoCoreBundle:Default:pager.html.twig' with {'pager': ads} %}
    </div>
</div>

{% endblock %}