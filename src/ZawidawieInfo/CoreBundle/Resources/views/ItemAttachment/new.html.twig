{% extends '::base.html.twig' %}

{% block title %}Dodaj załącznik do obiektu - Zawidawie.info{% endblock %}

{% block body %}

<div id="container-full">
      <div class="content">
	<h1>Dodaj załącznik do obiektu</h1>

	<form action="{{ action == 'item_attach_edit' ? path(action, {'id': item.id}) : path(action) }}" id="item_attach_form" method="post" {{ form_enctype(form) }}>
	    <table class="form">
                <tr>
                    <th><label for="ItemAttachmentType_item">Obiekt:</label></th>
                    <td>{{ form_widget(form.item) }}</td>
                </tr>
                <tr>
                    <th><label for="ItemAttachmentType_name">Tytuł:</label></th>
                    <td>{{ form_widget(form.name) }}</td>
                </tr>
                <tr>
                    <th><label for="ItemAttachmentType_file">Wybierz plik:</label></th>
                    <td>{{ form_widget(form.file) }}</td>
                </tr>
                <tr>
                    <th><label for="ItemAttachmentType_url">Lub podaj adres:</label></th>
                    <td>{{ form_widget(form.url) }}</td>
                </tr>
		{{ form_rest(form) }}
		<tr><th></th>
		<td><input type="submit" class="submit" value="Zapisz" /></td>
		</td></tr>
	    </table>
	</form>

	<br class="clear"/>
      </div>
</div>

{% endblock %}