<div id="news-container">
	<div id="news-stripe">
		{% if mainNews.hasPhoto %}
			<a href="{{ path('news_show', { 'slug': mainNews.slug }) }}">	
				<img src="{{ ('uploads/photos/' ~ mainNews.leadingPhoto.path)|apply_filter('news_stripe') }}"
				    title="{{ mainNews.leadingPhoto.title }}"/>
			</a>
		{% endif %}
		<div class="text">
			<h1><a href="{{ path('news_show', { 'slug': mainNews.slug }) }}">{{ mainNews.title }}</a></h1>
			<p><a href="{{ path('news_show', { 'slug': mainNews.slug }) }}">{{ mainNews.content|striptags|truncate(160)|html_entity_decode }}<span class="more">&nbsp;czytaj dalej&nbsp;&raquo;</span></a></p>
		</div>
	</div>
	
	{% for news in latestNews %}
		<h2><a href="{{ path('news_show', { 'slug': news.slug }) }}">{{ news.title }}</a></h2>
		{% if loop.index == 1 %}
		    <p>{{ news.content|striptags|truncate(150)|html_entity_decode }}</p>
		{% endif %}
	{% endfor %}
	<p class="next"><a href="{{ path('news_index') }}">pozostałe aktualności&nbsp;&raquo;</a></p>
</div>
