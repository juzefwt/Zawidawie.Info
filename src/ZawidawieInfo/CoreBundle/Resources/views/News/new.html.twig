{% extends '::base.html.twig' %}

{% block title %}Zawidawie.info{% endblock %}

{% block body %}

<script type="text/javascript">
    $(document).ready(function () {
        $('#NewsType_tags_string').tokenField({delimiters:",;"});
    });
</script>

<div id="container-full">
    <div class="content">
        <h1>Dodawanie newsa</h1>

        <form action="{{ action == 'news_edit' ? path(action, {'id': news.id}) : path(action) }}" id="news_form"
              method="post" {{ form_enctype(form) }}>
            <table class="form">
                <tr>
                    <th><label for="NewsType_title">Tytuł</label></th>
                    <td>{{ form_widget(form.title) }}</td>
                </tr>
                <tr>
                    <td colspan="2">
                        {{ form_widget(form.content, {"attr": {"class": "wysiwyg_editor"}}) }}
                    </td>
                </tr>
                <tr>
                    <th><label for="NewsType_tags_string">Tagi</label></th>
                    <td>{{ form_widget(form.tags_string) }}</td>
                </tr>
                <tr>
                    <th><label for="NewsType_related_photos">Zdjęcia</label></th>
                    <td>{{ form_widget(form.relatedPhotos) }}</td>
                </tr>
                <tr>
                    <th></th>
                    <td><input type="submit" class="submit" value="Zapisz"/></td>
                </tr>
            </table>
	    {{ form_rest(form) }}
        </form>

        <br class="clear"/>
    </div>
</div>

{% render "IHQSWysiwygBundle:Script:init" %}
{% endblock %}