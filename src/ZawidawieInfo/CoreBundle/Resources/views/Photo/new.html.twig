{% extends '::base.html.twig' %}

{% block title %}Zawidawie.info{% endblock %}

{% block body %}

<script type="text/javascript">
$(document).ready(function() {
  $('#PhotoType_tags_string').tokenField({delimiters: ",;"});
});
</script>

<div id="container-full">
      <div class="content">
        <h1>Dodaj zdjęcie</h1>

        <form action="{{ action == 'photo_edit' ? path(action, {'id': photo.id}) : path(action) }}" id="photo_form" method="post" {{ form_enctype(form) }}>
            <table class="form">
                <tr>
                    <th><label for="PhotoType_title">Tytuł</label></th>
                    <td>{{ form_widget(form.title) }}</td>
                </tr>
                <tr><th><label for="PhotoType_description">Opis</label></th>
                    <td>{{ form_widget(form.description, {"attr": {"style": "height:160px"}}) }}
                </td></tr>
                <tr>
                    <th><label for="PhotoType_file">Zdjęcie</label></th>
                    <td>
		      {% if form.file is defined %}
			{{ form_widget(form.file, {"attr": {"style": "width:300px"}}) }}
		      {% else %}
			<img src="{{ ('uploads/photos/' ~ photo.path)|apply_filter('thumbnail') }}" />
			<br class="clear" />
		      {% endif %}
		    </td>
                </tr>
		<tr>
                    <th><label for="PhotoType_item">Przypisanie</label></th>
                    <td>{{ form_widget(form.item) }}</td>
                </tr>
                <tr>
                    <th><label for="PhotoType_tags_string">Tagi</label></th>
                    <td>{{ form_widget(form.tags_string) }}</td>
                </tr>
                {{ form_rest(form) }}
                <tr><th></th>
                <td><input type="submit" class="submit" value="Zapisz" /></td>
                </td></tr>
            </table>
        </form>

        <br class="clear"/>
      </div>
</div>

{% render "IHQSWysiwygBundle:Script:init" %}
{% endblock %}