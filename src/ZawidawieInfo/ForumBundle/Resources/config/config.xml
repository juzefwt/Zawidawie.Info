<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="forum.authorname_persistence" class="ZawidawieInfo\ForumBundle\AuthorNamePersistence" scope="request">
            <argument type="service" id="security.context" />
            <argument type="service" id="request" />
        </service>
        <service id="lichess_forum.form_type.post" class="ZawidawieInfo\ForumBundle\Form\PostFormType">
            <argument type="service" id="security.context" />
            <tag name="form.type" alias="lichess_forum_post" />
        </service>
        <service id="lichess_forum.form_type.new_topic" class="ZawidawieInfo\ForumBundle\Form\NewTopicFormType" />

    </services>

</container>
