{% extends "::base.html.twig" %}
{% block title %}{{ category.name }} - Forum Zawidawie.info{% endblock %}

{% block body %}
<div class="category">

<div id="container-full">
      <div class="content">
              <h1><a href="{{ path("herzult_forum_index") }}">Forum</a> &raquo; {{ category.name|raw }}</h1>

              <br class="clear"/>

              {% render "HerzultForumBundle:Topic:list" with {"category": category, "pagerOptions": {"page": page, 'previous_message': 'Wstecz', 'next_message': 'Dalej', "routeName": "herzult_forum_category_show", 'routeParams': {"slug":category.slug}}} %}

      </div>
</div>

{% endblock %}
